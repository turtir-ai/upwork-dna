{
  "manifest_version": 3,
  "name": "Upwork DNA Scraper",
  "version": "2.0.0",
  "description": "Advanced batch scraping with auto-queue, human simulation, and auto-export.",
  "action": {
    "default_popup": "popup_v2.html",
    "default_title": "Upwork DNA Scraper v2.0"
  },
  "permissions": ["storage", "downloads", "tabs", "unlimitedStorage"],
  "host_permissions": ["https://www.upwork.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.upwork.com/nx/search/*",
        "https://www.upwork.com/jobs/*",
        "https://www.upwork.com/freelancers/*",
        "https://www.upwork.com/profile/*",
        "https://www.upwork.com/services/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
